@using StFrancisChurch.Models
@using StFrancisChurch.Utility
@model MemberRegistrationViewModel
@{
    ViewBag.Title = "Parish Registration";
}

<div class="container-wrap">
    <div id="fh5co-contact">
        <div class="row animate-box fadeInUp animated-fast">
            <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                <h1>@ViewBag.Title</h1>
                <p class="alert alert-info">Please ensure you come physically to the Church within 10 days after this registration to complete the registration process</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 animate-box fadeInUp animated-fast">
                @using (Html.BeginForm("MemberRegistration", "Home", FormMethod.Post, new {@role = "form", @enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(true, "", new {@style = "color :red"})
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="Surname" class="form-control" placeholder="Enter your Surname">
                            @Html.ValidationMessageFor(m => m.Surname, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="Firstname" class="form-control" placeholder="Enter your Firstname">
                            @Html.ValidationMessageFor(m => m.Firstname, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="Othername" class="form-control" placeholder="Enter your Othername">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.DropDownList("Gender", new SelectList(ViewUtility.GetGender(), "Id", "Name", null), "Select Gender", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Gender, "", new { @style = "color:red" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="HomeParish" class="form-control" placeholder="Enter your Home Parish">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="Town" class="form-control" placeholder="Enter your Town or Village">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="Nationality" class="form-control" placeholder="Enter your Nationality">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="email" name="EmailAddress" class="form-control" placeholder="Enter your Email address">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="tel" name="Phone" class="form-control" placeholder="Enter your Phone">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="tel" name="Phone2" class="form-control" placeholder="Enter another Phone if any">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="EmpolymentAddress" class="form-control" placeholder="Present Employment Address">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.DropDownList("MaritalStatus", new SelectList(ViewUtility.GetMaritalStatus(), "Id", "Name", null), "Select Marital Status", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="NextOfKin" class="form-control" placeholder="Enter Fullname of next of kin">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.DropDownList("NextOfKinMaritalStatus", new SelectList(ViewUtility.GetMaritalStatus(), "Id", "Name", null), "Select Kin Marital Status", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="NextOfKinAddress" class="form-control" placeholder="Enter Next of kin address">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="SpouseName" class="form-control" placeholder="Enter Fullname of spouse if married">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="SpousePhone1" class="form-control" placeholder="Enter spouse phone number">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" name="SpousePhone2" class="form-control" placeholder="Enter another spouse phone if any">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="number" name="SizeOfFamilyMale" class="form-control" placeholder="Enter Size of family (Male)">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="number" name="SizeOfFamilyFemale" class="form-control" placeholder="Enter Size of family (Female)">
                        </div>
                    </div>
                    @*<div class="col-md-6">
                        <label>Sacraments Received</label>
                        <div class="form-group">
                            <label class="checkbox-inline">
                                <input type="checkbox" name="" />Baptism
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" name="" />Confirmation
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" name="" />Matrimony
                            </label>
                        </div>
                    </div>*@
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.DropDownList("StatutoryGroup", new SelectList(ViewUtility.GetStatutoryBody(), "Id", "Name", null), "Select statutory body", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="col-md-6">
                            <input type="file" name="Passport" id="filePassport" accept="image/*" class="hidden">
                            <label for="filePassport" class="form-control" >Select Passport</label>
                        </div>
                        <div class="col-md-6">
                            <img id="blah" src="#" alt="Selected Passport Preview" width="150" height="150" />
                        </div>
                    </div>
                    <div class="col-md-12 col-md-push-8">
                        <div class="form-group">
                            <input type="submit" value="Register" class="btn btn-primary btn-modify">
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div><!-- END container-wrap -->
@section styles{
    
}
@section scripts{
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#blah').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#filePassport").change(function() {
            readURL(this);
        });
    </script>
}